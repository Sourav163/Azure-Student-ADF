										"quoteAllText": true,
										"fileExtension": {
											"value": ".@{split(item().name, '.')[1]}",
											"type": "Expression"
										}
									}
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"typeConversion": true,
